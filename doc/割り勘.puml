  enum 幹事区分 {
    幹事
    幹事以外
  }

  class 氏名 {
    - String
  }

  class 参加者 {
    - 氏名
    - 幹事区分
    - 支払区分
  }

  class 参加者一覧 {
    - List<参加者>
    + 参加者一覧 参加者を追加する(参加者)
    + 参加者一覧 参加者を削除する(参加者)
  }

  /'--------------------'/
  参加者一覧 "1" -> "n" 参加者
  参加者 -d-> 氏名
  参加者 -d-> 幹事区分
}

